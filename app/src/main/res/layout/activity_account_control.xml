<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/a6"
    android:foreground="@drawable/a11"
    tools:context=".AccountControl">

    <TextView
        android:id="@+id/CusName"
        android:layout_width="221dp"
        android:layout_height="51dp"
        android:fontFamily="@font/aclonica"
        android:textColor="#FAF7F7"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.063" />

    <TextView
        android:id="@+id/CusPoints"
        android:layout_width="126dp"
        android:layout_height="26dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/customer_points"
        android:textColor="#FFEB3B"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/Points"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.396"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Points"
        android:layout_width="54dp"
        android:layout_height="22dp"
        android:textColor="#FFEB3B"
        android:textSize="16SP"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.132"
        app:layout_constraintStart_toEndOf="@+id/CusPoints"
        app:layout_constraintTop_toBottomOf="@+id/CusName"
        app:layout_constraintVertical_bias="0.06" />

    <LinearLayout
        android:layout_width="406dp"
        android:layout_height="535dp"
        android:layout_marginTop="38dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CusPoints">

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#03A9F4"
            android:fontFamily="@font/aclonica"
            android:padding="30dp"
            android:text="@string/edit_your_account" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#03A9F4"
            android:fontFamily="@font/aclonica"
            android:padding="30dp"
            android:text="@string/make_your_own_parking" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#03A9F4"
            android:fontFamily="@font/aclonica"
            android:padding="30dp"
            android:text="@string/parking_history"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#03A9F4"
            android:fontFamily="@font/aclonica"
            android:padding="30dp"
            android:text="@string/change_password" />

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#03A9F4"
            android:fontFamily="@font/aclonica"
            android:padding="30dp"
            android:text="@string/logout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>