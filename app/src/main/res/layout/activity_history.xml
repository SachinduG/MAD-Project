<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".history">

    <TextView
        android:id="@+id/HistoryNAme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginBottom="48dp"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/HistoryEmail"
        app:layout_constraintStart_toStartOf="@+id/HistoryEmail" />

    <TextView
        android:id="@+id/HistoryNIC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="115dp"
        android:layout_marginTop="127dp"
        android:layout_marginBottom="125dp"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/Historymobile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/HistoryEmail" />

    <TextView
        android:id="@+id/HistoryEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="212dp"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/HistoryNIC"
        app:layout_constraintStart_toStartOf="@+id/HistoryNIC"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Historymobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:layout_marginBottom="229dp"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/HistorySearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="48dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/buttonID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintBottom_toTopOf="@+id/HistorySearch"
        app:layout_constraintEnd_toStartOf="@+id/HistorySearch" />
</androidx.constraintlayout.widget.ConstraintLayout>