<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/car1"
    tools:context=".Pay">


    <TextView
        android:id="@+id/carddetail"
        android:layout_width="291dp"
        android:layout_height="38dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="@string/paycard_details"
        android:textColor="#0B0000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.266"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.053" />


    <EditText
        android:id="@+id/cardname"
        android:layout_width="370dp"
        android:layout_height="53dp"
        android:background="@drawable/rounded_corner"
        android:ems="10"
        android:hint="@string/payname_on_card"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:textColor="#120101"
        android:textColorHint="#0E0000"
        android:textColorLink="#1E88E5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.609"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.162" />

    <EditText
        android:id="@+id/getcardnum"
        android:layout_width="355dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_corner"
        android:ems="10"
        android:hint="@string/paycard_number"
        android:importantForAutofill="no"
        android:inputType="none|number"
        android:textColor="#100000"
        android:textColorHint="#130101"
        android:textColorLink="#1E88E5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.446"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.255" />

    <EditText
        android:id="@+id/editTextTextPersonName3"
        android:layout_width="210dp"
        android:layout_height="48dp"
        android:background="@drawable/rounded_corner"
        android:ems="10"
        android:hint="@string/paycvv"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:textColor="#130101"
        android:textColorHint="#130101"
        android:textColorLink="#1E88E5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.124"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.346" />

    <EditText
        android:id="@+id/editTextTextPersonName4"
        android:layout_width="205dp"
        android:layout_height="58dp"
        android:background="@drawable/rounded_corner"
        android:ems="10"
        android:hint="@string/paymm_yy"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:textColor="#0C0000"
        android:textColorHint="#130101"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.124"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.441" />

    <Button
        android:id="@+id/paybt"
        android:layout_width="258dp"
        android:layout_height="55dp"
        android:background="@drawable/btn_drawable_selector2"
        android:text="@string/paypay_amount"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.162"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.574" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="227dp"
        android:layout_height="65dp"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="@string/paywe_accept"
        android:textColor="#0E0000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="367dp"
        android:layout_height="78dp"
        android:layout_marginEnd="20dp"
        android:background="?android:attr/colorPressedHighlight"
        android:contentDescription="@string/payimage4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.839"
        app:srcCompat="@drawable/paygateway" />

</androidx.constraintlayout.widget.ConstraintLayout>