<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="9"
    android:background="@drawable/car1"
    tools:context=".SearchPark">


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="370dp"
        android:layout_height="220dp"
        android:layout_margin="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_corner"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="30dp"
            android:contentDescription="TODO"
            app:srcCompat="@drawable/ic_baseline_local_parking_24" />

        <LinearLayout
            android:layout_width="368dp"
            android:layout_height="0dp"
            android:layout_gravity="fill_horizontal|top"
            android:layout_marginLeft="30dp"
            android:layout_weight="9"
            android:orientation="vertical">

            <TextView
                android:id="@+id/town"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/aclonica"
                android:gravity="start|center_vertical"
                android:text="Galle"
                android:textAllCaps="true"
                android:textSize="17sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/address"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/abril_fatface"
                android:gravity="start|center_vertical"
                android:text="187/2,galle."
                android:textAllCaps="true"
                android:textSize="17sp"
                android:textStyle="bold" />


        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button9"
        android:layout_width="241dp"
        android:layout_height="71dp"
        android:background="@drawable/btn_drawable_selector3"
        android:fontFamily="@font/allerta"
        android:text="Check This Location"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.035" />

</androidx.constraintlayout.widget.ConstraintLayout>